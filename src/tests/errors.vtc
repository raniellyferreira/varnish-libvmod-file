# looks like -*- vcl -*-

varnishtest "reader.error()"

shell {echo -n "foo bar baz quux" > ${tmpdir}/error}

varnish v1 -vcl {
	import ${vmod_file};
	backend b { .host = "${bad_ip}"; }

	sub vcl_init {
		new rdr = file.reader("${tmpdir}/error", ttl=0.1s);
	}

	sub vcl_recv {
		return (synth(200));
	}

	sub vcl_synth {
		set resp.http.Error = rdr.error();
		return (deliver);
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.Error == "false"
} -run

shell {rm -f ${tmpdir}/error}
delay .1

client c1 {
	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.Error == "true"
} -run
